<div class="container">
	<div class="col-xs-11 col-xs-offset-1">
		<h1><%= @customer.full_name %>さんの会員詳細</h1>
	</div>

	<div class="col-xs-11 col-xs-offset-1">
		<div>会員ID</div>
			<p><%= @customer.id %></p>

		<div>氏名</div>
			<p><%= @customer.full_name %></p>

		<div>フリガナ</div>
			<p><%= @customer.full_name_kana %></p>

		<div>郵便番号</div>
			<p><%= @customer.postal_code %></p>

		<div>住所</div>
			<p><%= @customer.address %></p>

		<div>電話番号</div>
			<p><%= @customer.telephone_number %></p>

		<div>メールアドレス</div>
			<p><%= @customer.email %></p>

		<div>ステータス</div>
			<p><%= @customer.is_deleted %></p>
	</div>

	<div class="col-xs-11 col-xs-offset-1">
			<%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>
			<%= link_to "注文履歴一覧を見る",  admin_orders_path(order_sort: 1, customer_id: @customer.id), class: "btn btn-primary" %>
	</div>