<div class="container">
	<div class="col-xs-11 col-xs-offset-1">
		<h1>ジャンル一覧・追加</h1>
	</div>

	<div class="col-xs-9 col-xs-offset-1">
		<div class="row">
			<p>ジャンル名</p>
				<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
					<%= f.text_field :name %>
	        		<%= f.submit '新規登録', class: "btn btn-success" %>
	    		<% end %>
	    </div>
	</div>

    <div class="col-xs-9">
    	<table class="table table-hover">
			<thead>
				<tr>
					<th>ジャンル</th>
				</tr>
			</thead>
			<tbody>
				<% @genres.each do |genre| %>
					<tr>
						<td><span><%= genre.name %></span></td>
						<td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
					</tr>
				<% end %>
			</tbody>
	</div>
</table>