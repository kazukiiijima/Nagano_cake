<h1>ジャンル一覧・追加</h1>
<table>
	<thead>
		<tr>
			<th>ジャンル名</th>
		</tr>
		<%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
			<div class="action row">
				<%= f.text_field :name %>
        		<%= f.submit '新規登録' %>
    		</div>
    	<% end %>
	</thead>

	<tbody>
		<p>ジャンル</p>
			<% @genres.each do |genre| %>
				<tr>
					<td><span><%= genre.name %></span></td>
					<td><%= link_to "編集する", edit_admin_genre_path(genre.id) %></td>
				</tr>
			<% end %>
	</tbody>
</table>