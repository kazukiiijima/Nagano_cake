<div class="container">
	<div class="col-xs-11 col-xs-offset-1">
		<h1>商品詳細</h1>
	</div>

	<div class="col-xs-7">
		<p><%= attachment_image_tag @item, :image, :fill, 60, 60 %></p>
	</div>

	<div class="col-xs-5">
		<div>商品名</div>
			<p><%= @item.name %></p>
		<div>商品説明</div>
			<p><%= @item.introduction %></p>
		<div>ジャンル</div>
			<p><%= @item.genre_id %></p>
		<div>税抜価格</div>
			<p><%= @item.price %></p>
		<div>販売ステータス</div>
			<p><%= @item.is_active %></p>

		<%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
	</div>
</div>
