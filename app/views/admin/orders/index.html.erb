<div class="container">
  <div class="col-xs-11">
        <div class = "orders">
			<h1>注文履歴一覧</h1>
				<table class="table table-hover">
					<thead>
              			<tr>
							<th>購入日時</th>
							<th>購入者</th>
							<th>注文個数</th>
							<th colspan="3"></th>
              			</tr>
              		</thead>
              		<tbody>
						<% @orders.each do |order| %>
							<tr>
                  				<td><span><%= link_to order.updated_at.strftime("%Y-%m-%d %H:%M:%S"), admin_order_path(order.id)  %></span></td>
								<td><span><%= order.name %></span></td>
								<td><span>
									<% order.order_details.each do |order_detail| %>
										<% order_detail.amount %>
									<% end %>
									<%= order.order_details.all.sum(:amount) %>
								</span></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			<%= paginate @orders %>
		</div>
	</div>
</div>