<div class="container">
	<div class="col-xs-11 col-xs-offset-1">
		<h1>会員情報編集</h1>
	</div>

	<div class="col-xs-11 col-xs-offset-1">
		<%= form_with model: @customer, url: customer_path, local: true do |f| %>
			<div>氏名</div>
				<%= f.text_field :last_name %>
				<%= f.text_field :first_name %>
			<div>フリガナ</div>
				<%= f.text_field :last_name_kana %>
				<%= f.text_field :first_name_kana %>
			<div>郵便番号</div>
				<%= f.text_field :postal_code %>
			<div>住所</div>
				<%= f.text_field :address %>
			<div>電話番号</div>
				<%= f.text_field :telephone_number %>
			<div>メールアドレス</div>
				<%= f.text_field :email %>

			<div><%= f.submit '編集内容を保存', class: "btn btn-success" %></div>
			<div><%= link_to '退会する',  costomers_confirm_path, class: "btn btn-danger" %></div>
		<% end %>
	</div>
</div>