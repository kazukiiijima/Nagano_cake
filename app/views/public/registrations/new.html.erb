<div class="container">
  <div class="col-xs-11 col-xs-offset-1">
    <h2>新規会員登録</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <p>名前</p>
  <div class="field">
    <%= f.label :（姓） %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "名前" %>

  <div class="field">
    <%= f.label :（名） %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>

  <p>フリガナ</p>
  <div class="field">
    <%= f.label :（セイ） %><br />
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %>

  <div class="field">
    <%= f.label :（メイ） %><br />
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>

  <p>メールアドレス</p>
  <div class="field">
    <% f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <p>郵便番号（ハイフンなし）</p>
  <div class="field">
    <% f.label :postal_code %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>

  <p>住所</p>
  <div class="field">
    <% f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

  <p>電話番号（ハイフンなし）</p>
  <div class="field">
    <% f.label :telephone_number %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>

  <p>パスワード（６文字以上）</p>
  <div class="field">
    <% f.label :password %>
    <% if @minimum_password_length %>
    <em>(<% @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <p>パスワード（確認用）</p>
  <div class="field">
    <% f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<%= link_to"こちら", new_customer_session_path %>からログインしてください
